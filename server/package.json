{
  "name": "api-shop",
  "description": "The backend server for a shop app",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist-types/index.d.ts",
  "dependencies": {
    "@lcdev/app-config": "^2.0.0-alpha.11",
    "@lcdev/router": "^1.5.0",
    "knex": "^0.21.5",
    "koa": "^2.13.0",
    "koa-static": "^5.0.0",
    "koa2-cors": "^2.0.6",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@lcdev/tsconfig": "^0.1.3",
    "@types/knex": "^0.16.1",
    "@types/koa": "^2.13.9",
    "@types/koa-static": "^4.0.3",
    "@types/koa2-cors": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.33.2",
    "node-dev": "^8.0.0",
    "node-env": "^0.1.6",
    "nodemon": "^3.0.1",
    "pg": "^8.11.3",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "build": "tsc -b",
    "build:watch": "tsc -b --watch",
    "config:generate": "app-config gen",
    "db:start": "NODE_ENV=dev app-config -s -- docker-compose up -d",
    "db:stop": "docker-compose stop",
    "lint:fix": "npm run lint -- --fix",
    "dev": "NODE_ENV=dev nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node ./src/index.ts",
    "start:watch": "NODE_ENV=dev node-dev ./dist/index.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migrate": "npx knex migrate:latest --knexfile ./src/lib/knexfile.ts",
    "seed:make": "knex --knexfile ./src/lib/knexfile.ts seed:make",
    "seed:run": "knex --knexfile ./src/lib/knexfile.ts seed:run"
  },
  "author": "",
  "license": "ISC"
}
